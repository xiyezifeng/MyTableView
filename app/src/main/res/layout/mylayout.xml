<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="199dp"
        android:background="#33111111"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginRight="2dp" />
    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#442222"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toLeftOf="@+id/view3"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="2dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline" />
    <View
        android:id="@+id/view3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#65317c"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent" />


    <View
        android:id="@+id/view4"
        android:layout_width="00dp"
        android:layout_height="0dp"
        android:background="#ddccaa"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/view2"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintBottom_toBottomOf="@+id/view1"
        app:layout_constraintRight_toLeftOf="@+id/view5"
        android:layout_marginRight="4dp"
        />


    <View
        android:id="@+id/view5"
        android:layout_width="130dp"
        android:layout_height="0dp"
        android:background="#99ffcf"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        app:layout_constraintBottom_toBottomOf="@+id/view1"
        android:layout_marginBottom="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</android.support.constraint.ConstraintLayout>